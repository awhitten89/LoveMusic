<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_event_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="app.lovemusic.com.lovemusic.ActivityEventDetails">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/detsBandImage"
        android:background="@drawable/row_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/detsArtistName"
        android:layout_below="@+id/detsBandImage"
        android:text="Artist"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/detsListeners"
        android:layout_below="@+id/detsArtistName"
        android:text="Listeners"
        android:textColor="#fff"
        android:textStyle="normal"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/detsUrl"
        android:layout_below="@+id/detsListeners"
        android:text="URL"
        android:textColor="#fff"
        android:textStyle="normal"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/detsMbid"
        android:layout_below="@+id/detsUrl"
        android:text="Mbid"
        android:textColor="#fff"
        android:textStyle="normal"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
